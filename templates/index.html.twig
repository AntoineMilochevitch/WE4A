{% extends 'base.html.twig' %}

{% block title %}MyMoodle{% endblock %}
    
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/style_index.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/index.js') }}"></script>
{% endblock %}

{% block body %}
<body>
    <div class="content">
        <div class="container">
            <div class="cards-wrapper">
                <div class="card-arrows">
                    <button class="arrow left" id="arrowLeft">
                        <ion-icon name="chevron-back-outline"></ion-icon>
                    </button>
                    <button class="arrow right" id="arrowRight">
                        <ion-icon name="chevron-forward-outline"></ion-icon>
                    </button>
                </div>

                <div class="cards-container" id="scrollContainer">
                    {% for i in 1..6 %}
                        <a href="#">
                            <div class="card">
                                <img src="{{ asset('images/course_image.png') }}" alt="Card Logo" class="card__image">
                                <div class="card__content">
                                    <p class="card__title">UE</p>
                                    <p class="card__description">
                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                                    </p>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>

            <!--  Barre de progression ajout√©e ici -->
<div class="progress-bar-container">
    <div id="progressBar" class="progress-bar"></div>
</div>

            <hr class="separator">

            <h2 class="section-title">Notifications R√©centes</h2>

            <div class="info-container">
                {% for notif in notifications %}
                    <div class="info-item {{ notif.typeNotif.typeNotif|lower }}">
                        <div class="info-content">
                            <div class="info-title">
                                {{ notif.typeNotif.typeNotif|upper }}
                            </div>
                            <div class="info-description">
                                {{ notif.message }}
                            </div>
                            <div class="info-date">
                                {{ notif.date|date('d/m/Y') }}
                            </div>
                        </div>
                        <div class="menu-container">
                            <span class="menu-dots">‚ãÆ</span>
                            <div class="menu-popup">
                                {% if not notif.estVu %}
                                    <button class="menu-button mark-read-btn">‚úÖ Marquer comme lu</button>
                                {% endif %}
                                <button class="menu-button delete-btn">üóëÔ∏è Supprimer</button>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Aucune notification pour le moment.</p>
                {% endfor %}
            </div>


            <div class="search">
                <input type="text" placeholder="Rechercher un cours">
                <button><ion-icon name="search-outline"></ion-icon></button>
            </div>
        </div>
    </div>
</body>
{% endblock %}
