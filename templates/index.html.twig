{% extends 'base.html.twig' %}

{# D√©finir le titre de la page #}
{% block title %}MyMoodle{% endblock %}

{# Importer les feuilles de style sp√©cifiques √† la page #}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/style_index.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
{% endblock %}

{# Importer les scripts JavaScript n√©cessaires #}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/index.js') }}"></script>
{% endblock %}

{# Contenu principal de la page #}
{% block body %}
    <body>
    <div class="content">
        <div class="container">

            {# Section des cartes de cours avec fl√®ches pour d√©filer #}
            <div class="cards-wrapper">
                <div class="card-arrows">
                    <button class="arrow left" id="arrowLeft">
                        <ion-icon name="chevron-back-outline"></ion-icon>
                    </button>
                    <button class="arrow right" id="arrowRight">
                        <ion-icon name="chevron-forward-outline"></ion-icon>
                    </button>
                </div>

                <div class="cards-container" id="scrollContainer">
                    {# Les cours seront charg√©s dynamiquement ici via JavaScript #}
                </div>
            </div>

            {# Barre de progression sous les cartes #}
            <div class="progress-bar-container">
                <div id="progressBar" class="progress-bar"></div>
            </div>

            <hr class="separator">

            {# Section des notifications r√©centes #}
            <h2 class="section-title">Notifications R√©centes</h2>

            <div class="info-container">
                {# Boucle sur les notifications pass√©es depuis le contr√¥leur #}
                {% for notif in notifications %}
                    <div class="info-item {{ notif.notification.typeNotif.typeNotif|lower }} {% if notif.estVu %}read{% endif %}">
                        <div class="info-content">
                            <div class="info-title">
                                {{ notif.notification.typeNotif.typeNotif|upper }}
                            </div>
                            <div class="info-description">
                                {{ notif.notification.message }}
                            </div>
                            <div class="info-date">
                                {{ notif.notification.date|date('d/m/Y') }}
                            </div>
                        </div>

                        {# Menu contextuel pour chaque notification #}
                        <div class="menu-container">
                            <span class="menu-dots">‚ãÆ</span>
                            <div class="menu-popup">
                                {# Bouton pour marquer comme lu si ce n'est pas d√©j√† le cas #}
                                {% if not notif.estVu %}
                                    <button class="menu-button mark-read-btn" data-id="{{ notif.notification.id }}">‚úÖ Marquer comme lu</button>
                                {% endif %}
                                {# Bouton pour supprimer la notification (fonctionnalit√© √† impl√©menter) #}
                                <button class="menu-button delete-btn">üóëÔ∏è Supprimer</button>
                            </div>
                        </div>
                    </div>
                {% else %}
                    {# Message affich√© s'il n'y a aucune notification #}
                    <p>Aucune notification pour le moment.</p>
                {% endfor %}
            </div>
        </div>
    </div>
    </body>
{% endblock %}
