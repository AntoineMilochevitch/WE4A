<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Moodle</title>
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
</head>
<body>

<div class="hbox">
    <!-- Login Section -->
    <div class="login-container">
        <img src="{{ asset('images/utbmlogo.jpg') }}" alt="Logo UTBM" width="200">

        <form action="{{ path('home') }}" method="POST">
            <input id="prenom" name="username" type="text" placeholder="Nom d’utilisateur" required>

            <div class="password-container">
                <input id="password" name="password" type="password" placeholder="Mot de passe" required>
                <img id="togglePassword" src="{{ asset('images/password_hide.png') }}" alt="Afficher/Masquer le mot de passe">
            </div>

            <input id="connexion" name="connexion" type="submit" value="Connexion">
        </form>

        <a href="https://moodle.utbm.fr/login/forgot_password.php">Mot de passe perdu ?</a>
    </div>

    <!-- Stats Section -->
    <div class="login-container-stat">
        <h2>Statistiques</h2>

        <div class="stat-item">
            <img src="{{ asset('images/student.png') }}" alt="Icone">
            <span>Étudiants : <strong>4500</strong></span>
        </div>
        <div class="stat-item">
            <img src="{{ asset('images/prof.png') }}" alt="Icone">
            <span>Enseignants : <strong>300</strong></span>
        </div>
        <div class="stat-item">
            <img src="{{ asset('images/cours.png') }}" alt="Icone">
            <span>Cours disponibles : <strong>50</strong></span>
        </div>
        <div class="stat-item">
            <img src="{{ asset('images/post.png') }}" alt="Icone">
            <span>Nombre de posts : <strong>1000</strong></span>
        </div>
    </div>
</div>

<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        var passwordField = document.getElementById("password");
        var icon = document.getElementById("togglePassword");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            icon.src = "{{ asset('images/password_show.png') }}";
        } else {
            passwordField.type = "password";
            icon.src = "{{ asset('images/password_hide.png') }}";
        }
    });
</script>

</body>
</html>
